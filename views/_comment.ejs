<li id="comment-<%= comment._id %>">
    <small>
        <b><%= comment.user.name %>:</b><%= comment.content%>
        <small>
            <small>
                <%if(locals.user){%>
                    <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%= comment._id %>&type=Comment"><%= comment.likes.length %> Likes</a>            
                <%}else{%>
                    <%= comment.likes.length %>
                <%}%>
            </small>
            <% if(locals.user){ %>
                <% if(locals.user.id == comment.user.id || locals.user.id == post.user.id){ %>
                    <a href="/comments/destroy/<%= comment.id %>" class='delete-comment-button'><i class="fa-solid fa-trash"></i></a>
                <% } %>
            <% } %>
        </small>
    </small>
</li>
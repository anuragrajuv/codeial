<link rel="stylesheet" href="/css/home.css">

<div id="home-container">
    <section id="feed-posts">
        <h4>Posts</h4>
        <%if(locals.user){%>
        <form action="posts/create" method="post" id="new-post-form" >
            <textarea name="content" cols="30" rows="3" placeholder="Type here...." required></textarea>
            <input type="submit" value="Post">
        </form>
        <% } %>

        <div id="posts-list-container">
            <ul>
                <% for(post of posts){%>
                    <%- include('_post')-%>
                <%}%>
            </ul>
        </div>
    </section>

    <section id="user-friends" style="position: sticky; top: 30px;">
        <h4>Users</h4>
        <% for(u of all_users){%>
            <p>
                <a href="/users/profile/<%= u.id%>"><%=u.name%></a>
            </p>    
        <%}%>
        <section>
            <%if(locals.user){%>
                <h4>Friends</h4>
                <% for(let u of all_friends){%>
                    <p>
                        <a href="/users/profile/<%= u._id%>"><%=u.name%></a>
                    </p>    
                <%}%>
            <%}%>
        </section>
    </section>
   <%- include('_chatbox') -%>
</div>

<script src="/js/home_posts.js"></script>
<script src="/js/home_comments.js"></script>

<script src="/js/toggle_like.js"></script>
<script>
    $('.toggle-like-button').each(function(){
        let self = this;
        let toggleLike = new ToggleLike(self);
    })
</script>
<script src="https://cdn.socket.io/4.8.1/socket.io.min.js" integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+" crossorigin="anonymous"></script>
<script src="js/chat_engine.js"></script>
<% if(locals.user){ %>
<script>
    new ChatEngine('user-chat-box','<%=locals.user.email%>'); 
</script>
<% } %>


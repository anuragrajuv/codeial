<link rel="stylesheet" href="<%= assetPath('css/user_profile.css') %>">   
<% if(user.id == profile_user.id){ %>
    <!-- if user matches show the edit form -->
    <img src="<%=user.avatar%>" alt="<%=user.name%>" width="100">

     <form action="/users/update/<%=profile_user.id%>" method="post" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="Your Name" value="<%=profile_user.name%>" required>
        <input type="email" name="email" placeholder="Your Email" value="<%=profile_user.email%>" required>
        <input type="file" name="avatar" placeholder="Profile Picture">
        <input type="submit" value="Update">
    </form>
    <%}else{%> 
        <!-- else show only profile info -->
        <img src="<%=profile_user.avatar%>" alt="<%=profile_user.name%>" width="100">

        <p><%= profile_user.name%></p>
        <p><%= profile_user.email%></p>
        <button method= "post" id="toggleFriendButton" data-friend-id="<%=profile_user.id%>"></button>

<%}%>
<script src="<%= assetPath('/js/toggle_friendship.js')%>"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const button = document.getElementById('toggleFriendButton');
        const isFriend = <%= isFriend %>;

        button.textContent = isFriend ? 'Remove Friend' : 'Add Friend';
    });
</script>
<li class="post">
        <small style="display: flex;justify-content: space-between;">
            <b><%= post.user.name %>:</b>
            <% if(locals.user && locals.user.id == post.user.id){ %>
                <b><a href="posts/destroy/<%= post.id%>"><i class="fa-solid fa-trash"></i></a></b>
            <% } %>
        </small>
    
    <%= post.content %>
    <div class="post-comments">
        <%if(locals.user){%>
            <form action="/comments/create" method="post" class="comment-form">
                <input type="text" name="content" placeholder="Type here to add comment" required>
                <input type="hidden" name="post" value="<%= post._id%>">
                <input type="submit" value="Add Comment">
            </form>
        <% } %>

        <div class="post-comments-list">
            <ul id="post-comments-<%= post.id%>">
                <% for(comment of post.comments){%>
                    <%- include('_comment') -%>
                <%}%>
            </ul>
        </div>
    </div>
</li>